$calendarBackground = #fff
$calendarBorderColor = #eceef1

$monthForeground = #5a6171
$monthBackground = #eceef1

$weekdaysBackground = #eceef1
$weekdaysForeground = #5a6171

$dayForeground = #484848
$dayHoverBackground = #e2e2e2

$todayColor = #bbb

$selectedDayBackground = #FF5A5F
$selectedDayForeground = #fff

$noCalendarBorder = true
@require "../flatpickr"

span.flatpickr-day.selected
	font-weight bold

// Dark mode support
@media (prefers-color-scheme: dark)
	.flatpickr-calendar
		background #1f2937
		box-shadow 0 10px 25px rgba(0, 0, 0, 0.3)
	
	.flatpickr-months
		background #111827
	
	.flatpickr-month,
	.flatpickr-current-month,
	.flatpickr-monthDropdown-months,
	input.cur-year
		color #f9fafb
	
	.flatpickr-prev-month,
	.flatpickr-next-month
		fill #f9fafb
		
		&:hover svg
			fill #60a5fa
	
	span.flatpickr-weekday
		background #111827 !important
		color #9ca3af !important
	
	.flatpickr-innerContainer,
	.flatpickr-days
		background #1f2937
	
	.flatpickr-day
		color #e5e7eb
		
		&:hover
			background #374151
		
		&.today
			border-color #60a5fa
			color #f9fafb
		
		&.selected
			background #FF5A5F
			color #ffffff
		
		&.disabled,
		&.prevMonthDay,
		&.nextMonthDay
			color #6b7280
	
	.flatpickr-time
		background #111827
		border-top-color #374151
		
		input,
		.flatpickr-am-pm
			color #f9fafb
			
			&:hover
				background rgba(255, 255, 255, 0.05)
	
	.numInputWrapper span.arrowUp:after
		border-bottom-color #f9fafb !important
	
	.numInputWrapper span.arrowDown:after
		border-top-color #f9fafb !important
