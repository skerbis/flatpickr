// Auto Theme - Adapts to system preference (light/dark)

$calendarBackground = #ffffff
$calendarBorderColor = #e5e7eb
$monthForeground = #1f2937
$monthBackground = #f9fafb
$weekdaysBackground = #f3f4f6
$weekdaysForeground = #6b7280
$dayForeground = #1f2937
$dayHoverBackground = #f3f4f6
$todayColor = #3b82f6
$today_fg_color = #1f2937
$selectedDayBackground = #3b82f6
$selectedDayForeground = #ffffff
$disabled_day_color = #9ca3af
$noCalendarBorder = true

@require "../pickit"

// Auto theme - light mode
.flatpickr-calendar
	--pickit-bg: #ffffff
	--pickit-text: #1f2937
	--pickit-border: #e5e7eb
	--pickit-border-radius: 8px
	--pickit-shadow: 0 4px 12px rgba(0, 0, 0, 0.1)
	
	--pickit-month-bg: #f9fafb
	--pickit-month-text: #1f2937
	--pickit-arrow-hover: #3b82f6
	
	--pickit-weekdays-bg: #f3f4f6
	--pickit-weekdays-text: #6b7280
	
	--pickit-day-text: #1f2937
	--pickit-day-hover-bg: #f3f4f6
	--pickit-day-disabled: #9ca3af
	
	--pickit-today-bg: #dbeafe
	--pickit-today-text: #1e40af
	--pickit-today-border: #3b82f6
	
	--pickit-selected-bg: #3b82f6
	--pickit-selected-text: #ffffff
	
	--pickit-range-bg: #93c5fd
	--pickit-range-text: #1e3a8a
	
	--pickit-time-bg: #f9fafb
	--pickit-time-border: #e5e7eb
	--pickit-time-text: #1f2937
	
	background var(--pickit-bg)
	border 1px solid var(--pickit-border)
	box-shadow var(--pickit-shadow)

// Auto theme - dark mode (via prefers-color-scheme)
@media (prefers-color-scheme: dark)
	.flatpickr-calendar
		--pickit-bg: #1f2937
		--pickit-text: #f3f4f6
		--pickit-border: #374151
		--pickit-shadow: 0 4px 12px rgba(0, 0, 0, 0.5)
		
		--pickit-month-bg: #111827
		--pickit-month-text: #f9fafb
		--pickit-arrow-hover: #60a5fa
		
		--pickit-weekdays-bg: #1f2937
		--pickit-weekdays-text: #9ca3af
		
		--pickit-day-text: #e5e7eb
		--pickit-day-hover-bg: #374151
		--pickit-day-disabled: #6b7280
		
		--pickit-today-bg: #1e3a8a
		--pickit-today-text: #ffffff
		--pickit-today-border: #60a5fa
		
		--pickit-selected-bg: #3b82f6
		--pickit-selected-text: #ffffff
		
		--pickit-range-bg: #1e3a8a
		--pickit-range-text: #bfdbfe
		
		--pickit-time-bg: #111827
		--pickit-time-border: #374151
		--pickit-time-text: #f9fafb
		
		background var(--pickit-bg) !important
		border-color var(--pickit-border) !important
		box-shadow var(--pickit-shadow) !important
		
	.flatpickr-months .flatpickr-month
		background var(--pickit-month-bg) !important
		color var(--pickit-month-text) !important
		fill var(--pickit-month-text) !important
		
	.flatpickr-weekdays
		background var(--pickit-weekdays-bg) !important
		
	.flatpickr-time
		background var(--pickit-time-bg) !important
		border-color var(--pickit-time-border) !important
